[sqlfluff]
dialect = postgres
sql_file_exts = .sql
exclude_rules = L034,L042,L044
large_file_skip_byte_limit = 30000

[sqlfluff:rules]
tab_space_size = 4
max_line_length = 88
single_table_references = qualified

[sqlfluff:rules:L063]
extended_capitalisation_policy = lower

[sqlfluff:rules:L030]
extended_capitalisation_policy = lower

[sqlfluff:rules:L016]
ignore_comment_lines = True
